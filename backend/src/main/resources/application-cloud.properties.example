# Example: Cloud profile (Supabase Postgres)
# Copy to application-cloud.properties and adjust as needed

# Use sslmode=require for Supabase
spring.datasource.url=jdbc:postgresql://YOUR_DB_HOST:5432/postgres?sslmode=require
spring.datasource.username=YOUR_DB_USER
spring.datasource.password=YOUR_DB_PASSWORD
spring.datasource.driver-class-name=org.postgresql.Driver

spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.hibernate.ddl-auto=update

server.port=5050
